{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["es6", "dom"],
    "types": [
      "node",
      "mocha",
      "chai"
